<!--
 All hybris buildcallbacks.xml macrodefinitions:

 Build/Documentation

	 before/after ant macro "clean"
		 <macrodef name="mockcommercewebservices_before_clean"/>
		 <macrodef name="mockcommercewebservices_after_clean"/>

	 before/after ant macro "build"
		 <macrodef name="mockcommercewebservices_before_build"/>
		 <macrodef name="mockcommercewebservices_after_build"/>

	 before/after ant macro "compile_core" - the core module of the extension
		 <macrodef name="mockcommercewebservices_before_compile_core">
		 <macrodef name="mockcommercewebservices_after_compile_core">

	 before/after ant macro "compile_web" - the web module of the extension
		 <macrodef name="mockcommercewebservices_before_compile_web" />
		 <macrodef name="mockcommercewebservices_after_compile_web" />

 Preparing extension

	 will be called in the beginning of the ant call and only once (also when using multiple 
	 ant targets e.g. ant build yunittest)
		 <macrodef name="mockcommercewebservices_only_once_prepare"/>

 Creating ear module/production

	 before/after ant macro "ear"
		 <macrodef name="mockcommercewebservices_before_ear"/>
		 <macrodef name="mockcommercewebservices_after_ear"/>

	 before/after ant macro "production" - for hybris server only
		 <macrodef name="mockcommercewebservices_before_production" />
		 <macrodef name="mockcommercewebservices_after_production" />

 JUnit Test

	 before/after ant macro "yunitinit" 
		 <macrodef name="mockcommercewebservices_before_yunitinit" />
		 <macrodef name="mockcommercewebservices_after_yunitinit" />

	 before/after ant macro "yunit"
		 <macrodef name="mockcommercewebservices_before_yunit" />
		 <macrodef name="mockcommercewebservices_after_yunit" /> 

 Distribution package

 	 before/after ant macro "dist" - internal target; only for use when platform is available in source code
		 <macrodef name="mockcommercewebservices_after_dist"/>
		 <macrodef name="mockcommercewebservices_before_dist"/>

	 before/after ant macro "dist_copy" - internal target; only for use when platform is available in source code
		 <macrodef name="mockcommercewebservices_before_dist_copy"/>
		 <macrodef name="mockcommercewebservices_after_dist_copy"/>

-->

<project name="mockcommercewebservices_buildcallbacks" >

	<!-- 
		Called whenever 'ant ear' is used. this callback can be used to modify the content of the ear file

		${ear.path}: 			path to ear
	 -->
	<macrodef name="mockcommercewebservices_before_ear">
		<sequential>

			<!-- you can do anything before the EAR file is being packed -->

		</sequential>
	</macrodef>

	<!-- <v2-addons> -->
	<macrodef name="mockcommercewebservices_after_clean">
		<sequential>
			<if>
				<available file="${ext.mockcommercewebservices.path}/web/addonsrc" type="dir"/>
				<then>
					<echo message="Deleting addons directories from: ${ext.mockcommercewebservices.path}/web/webroot"/>
					<echo message="Deleting addonsrc directory from: ${ext.mockcommercewebservices.path}/web/"/>
					<echo message="Deleting addons web libs from: ${ext.mockcommercewebservices.path}/web/webroot/WEB-INF/lib"/>

					<delete includeEmptyDirs="true" failonerror="false">
						<fileset dir="${ext.mockcommercewebservices.path}/web/webroot/" includes="**/addons/"/>
						<fileset dir="${ext.mockcommercewebservices.path}/web" includes="**/addonsrc/"/>
						<fileset dir="${ext.mockcommercewebservices.path}/web/webroot/WEB-INF/lib" includes="addon-**.jar"/>
					</delete>
				</then>
			</if>
		</sequential>
	</macrodef>
	<!-- </v2-addons> -->

	<macrodef name="mockcommercewebservices_after_build">
		<sequential>
			<echo message="mockcommercewebservices_after_build"/>
			<containsExact string="${extension.names}" substring="addonsupport" separator=";">
				<do>
					<foreachext>
						<do>
							<for list="${addon.folder}" param="addOnFile" delimiter=";">
								<sequential>
									<if>
										<available file="${ext.@{extname}.path}/acceleratoraddon/@{addOnFile}"/>
										<then>
											<echo message="Found addon:  @{extname}"/>
											<echo message="addOnFile test:  @{addOnFile}"/>
											<copyAddOnToExtension addonextension="@{extname}" addonresource="@{addOnFile}" target="mockcommercewebservices"/>
										</then>
									</if>
								</sequential>
							</for>
						</do>
					</foreachext>
				</do>
			</containsExact>
		</sequential>
	</macrodef>
	
	<patternset id="extension.mockcommercewebservices.production.filter">
		<patternset refid="extension.production.filter"/>
		<exclude name="web/addonsrc/**"/>
	</patternset>
	
</project>
